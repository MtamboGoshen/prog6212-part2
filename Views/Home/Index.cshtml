@model List<ContractMonthlyClaim.Models.Claim>
@{
    ViewData["Title"] = "Claims List";
}

<div class="container mt-4">
    <!-- Header and action button -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="fw-bold mb-0">Claims List</h4>
        <a asp-action="Submit" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Submit Claim
        </a>
    </div>

    <!-- Claims Table -->
    <div class="table-responsive">
        <table class="table table-bordered table-striped align-middle">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Lecturer Name</th>
                    <th scope="col">Programme</th>
                    <th scope="col">Month</th>
                    <th scope="col">Amount</th>
                    <th scope="col">Notes</th>
                    <th scope="col" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.LecturerName</td>
                        <td>@item.Programme</td>
                        <td>@item.Month</td>
                        <td>@item.Amount</td>
                        <td>@item.Notes</td>
                        <td class="text-center">
                            <a asp-action="Delete" asp-route-id="@item.Id"
                               onclick="return confirm('Are you sure you want to delete claim for @item.LecturerName?')"
                               class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
