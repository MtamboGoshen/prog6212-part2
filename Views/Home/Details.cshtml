@model Claim
@{
    ViewData["Title"] = "Claim Details";
}

<h2>Claim Details</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Lecturer Name</dt>
        <dd class="col-sm-9">@Model.LecturerName</dd>

        <dt class="col-sm-3">Programme</dt>
        <dd class="col-sm-9">@Model.Programme</dd>

        <dt class="col-sm-3">Amount</dt>
        <dd class="col-sm-9">@Model.Amount.ToString("C")</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Status</dd>

        <dt class="col-sm-3">Notes</dt>
        <dd class="col-sm-9">@Model.Notes</dd>

        <dt class="col-sm-3">Supporting Document</dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrEmpty(Model.Filename))
            {
                <a href="/uploads/@Model.Filename" target="_blank">View Document</a>
            }
            else
            {
                <span>No document was submitted.</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>